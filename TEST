  <h1>TEST ROBLOX ðŸ”¥</h1>
  <div id="messages"></div>
  <input type="text" id="wordInput" placeholder="Ã‰cris ton mot...">
  <button onclick="sendWord()">Envoyer</button>

  <script>
    const messagesDiv = document.getElementById('messages');

    function sendWord() {
      const input = document.getElementById('wordInput');
      const word = input.value.trim();
      if (word === "") return;
      
      // Affiche ton mot
      const p = document.createElement('p');
      p.innerText = "Toi : " + word;
      messagesDiv.appendChild(p);
      
      // Simule l'envoi Ã  ton pote
      setTimeout(() => {
        const p2 = document.createElement('p');
        p2.innerText = "Ton pote a reÃ§u : " + word;
        p2.style.color = "#00ff00";
        messagesDiv.appendChild(p2);
        messagesDiv.scrollTop = messagesDiv.scrollHeight;
      }, 1000);
      
      input.value = "";
      input.focus();
      messagesDiv.scrollTop = messagesDiv.scrollHeight;
    }
  </script>
